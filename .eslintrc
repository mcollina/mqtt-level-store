{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "quotes": [
      1,
      "single"
    ],
    "no-mixed-requires": [
      0,
      false
    ],
    "yoda": [
      1,
      "always"
    ],
    "indent": [
      2,
      2
    ],
    "brace-style": [
      2,
      "1tbs"
    ],
    "comma-style": [
      2,
      "last"
    ],
    "default-case": 2,
    "func-style": [
      2,
      "declaration"
    ],
    "guard-for-in": 2,
    "no-floating-decimal": 2,
    "no-nested-ternary": 2,
    "no-undefined": 2,
    "radix": 2,
    "space-before-function-paren": [
      1,
      "always"
    ],
    "space-before-blocks": 2,
    "spaced-comment": [
      2,
      "always",
      {
        "exceptions": [
          "-"
        ]
      }
    ],
    "strict": [
      2,
      "global"
    ],
    "wrap-iife": 2
  }
}
